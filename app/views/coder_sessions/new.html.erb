<div class="container">

  <h1>Login</h1>

  <%= form_tag coder_sessions_path, method:  :post do %>

    <div>
      <%= label_tag :email %>
      <%= text_field_tag :email %>
      <br/>
    </div>

    <div>
      <%= label_tag :password %>
      <%= password_field_tag :password %>
      <br/>
    </div>

    <div>
      <%= submit_tag "Login" %>
    </div>

    <% end %>

    <%= link_to "Back", posts_path %>
</div> <!--end container-->