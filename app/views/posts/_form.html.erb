<%= form_for(@post) do |f| %>
  <ul>
  <% @post.errors.full_messages.each do |error| %>
    <li><%= error %></li>
    <% end %>
  </ul>

  <p>
    <%= f.label :title %><br/>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :author %><br/>
    <%= f.text_field :author %>
  </p>

  <p>
    <%= f.label :date_written %><br/>
    <%= f.date_select :date_written %><br/>
  </p>

  <p>
    <%= f.label :body, "Content" %><br/>
    <%= f.text_area :body, :size => "50x50" %>
  </p>

  <p>
    <%= f.label :tag_list %><br/>
    <%= f.text_field :tag_list %>
  </p>

  <p>
    <%= f.submit %>
  </p>

  <% end %>