<div class="container">
<h1> <%= @post.title %> </h1>

<p> <%= @post.body %> </p>

<p>
  <%= link_to "Edit Post", edit_post_path(@post) %>
</p>

<p>
<%= link_to "Delete Post", post_path(@post), method: :delete, data: {confirm: "Do you really want to delete this post?"} %>
</p>

<p>
<%= link_to "List All Posts", posts_path %>
</p>

</div>
