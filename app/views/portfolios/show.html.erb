<div class="container">

  <h1 class="boxed">Project: <%=@portfolio.title%> </h1>

  <p>Description: <%=@portfolio.description%> </p>

  <p>Github URL: <%=@portfolio.github_url%> </p>

  <p>Site URL: <%=@portfolio.project_url%> </p>

<div class="row">
  <div class="col-md-3"><%= link_to "Go Back To All Portfolio Projects", portfolios_path %></div>
  <% if logged_in? %>
  <div class="col-md-3"><%= link_to "Edit Project", edit_portfolio_path(@portfolio) %></div>
  <div class="col-md-3"><%= link_to "Delete Project", portfolio_path(@portfolio), method: :delete, data: {confirm: "Do you really want to delete this project?"} %></div>
  <% end %>
</div>

<p>
    <% if @portfolio.image1.exists? %>
    <%= image_tag @portfolio.image1.url(:medium) %>
    <% end %>
</p>

</div>