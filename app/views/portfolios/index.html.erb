<div class="container">

<h1 class="boxed">My Coding Portfolio</h1>

<div class="row centered desc">

<% @portfolios.each_with_index do |portfolio, index| %>
      <% if(index%2==0) %>
        </div> <!-- end current row -->
        <div class="row centered desc"> <!--start new row-->
      <%end%>

      <div class="col-xs-6">
        <h4 class="boxed"><strong><%= link_to portfolio.title, portfolio_path(portfolio) %></strong></h4>

        <% if portfolio.image1.exists? %>
        <%= link_to image_tag(portfolio.image1.url(:thumb), :class => "img-responsive aligncenter", :alt => "portfolio image"), portfolio_path(portfolio) %>
        <% end %>

        <p><%= portfolio.description %></p>

        <p style="text-align:left"><strong>Github URL:</strong> <%= link_to(portfolio.github_url,portfolio.github_url,:target=>"_blank") unless portfolio.github_url.nil?%> </p>

        <p style="text-align:left"><strong>Site URL:</strong> <%= link_to(portfolio.project_url,portfolio.project_url,:target=>"_blank") unless portfolio.github_url.nil?%> </p>
      </div>

<% end %><!--@portfolio.each_with_index-->

</div> <!--close final display row -->

<% if logged_in? %>
<p> <%= link_to "Add A New Portfolio Project", new_portfolio_path %>
</p>
<% end %>

</div><!--/container-->