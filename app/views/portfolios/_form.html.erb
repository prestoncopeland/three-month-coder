<%= form_for(@portfolio, html: {multipart: true}) do |f| %>
  <ul>
  <% @portfolio.errors.full_messages.each do |error| %>
    <li><%= error %></li>
    <% end %>
  </ul>

  <p>
    <%= f.label :title %><br/>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :description %><br/>
    <%= f.text_area :description %>
  </p>

  <p>
    <%= f.label :github_url %><br/>
    <%= f.text_field :github_url %>
  </p>

  <p>
    <%= f.label :project_url %><br/>
    <%= f.text_field :project_url %>
  </p>

  <p>
    <% if @portfolio.image1.exists? %>
      <%= image_tag @portfolio.image1.url %> <br/>
    <% end %>
    <%= f.label :image1, "Attach a new image" %> <br/>
    <%= f.file_field :image1 %>
  </p>

  <p>
    <%= f.submit %>
  </p>

  <% end %>