<%= form_for(@milestone) do |f| %>
  <ul>
  <% @milestone.errors.full_messages.each do |error| %>
    <li><%= error %></li>
    <% end %>
  </ul>

  <p>
    <%= f.label :date_worked %><br/>
    <%= f.date_select :date_worked %>
  </p>

  <p>
    <%= f.label :time, "Time(s)" %><br/>
    <%= f.text_area :time %>
  </p>

  <p>
    <%= f.label :hours %><br/>
    <%= f.number_field :hours, in: 0.0..24.0, step: 0.25 %>
  </p>

  <p>
    <%= f.label :activity, "Activities" %><br/>
    <%= f.text_area :activity %>
  </p>

  <p>
    <%= f.submit %>
  </p>

  <% end %>